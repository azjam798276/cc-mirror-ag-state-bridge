{
    "name": "cc-mirror-ag-state-bridge",
    "version": "1.0.0",
    "description": "Antigravity Provider with State Bridge for cc-mirror",
    "main": "dist/index.js",
    "scripts": {
        "test": "jest --coverage --json --outputFile=test-results.json",
        "test:unit": "jest tests/unit --coverage",
        "test:integration": "jest tests/integration",
        "test:performance": "jest tests/performance",
        "test:coverage": "npm run test",
        "lint": "eslint src/**/*.ts",
        "build": "tsc"
    },
    "devDependencies": {
        "@types/fs-extra": "^11.0.4",
        "@types/jest": "^29.5.14",
        "@types/node": "^20.19.27",
        "jest": "^29.7.0",
        "ts-jest": "^29.4.6",
        "ts-node": "^10.9.2",
        "typescript": "^5.3.0"
    },
    "dependencies": {
        "chalk": "^4.1.2",
        "commander": "^14.0.2",
        "express": "^4.18.0",
        "fs-extra": "^11.2.0",
        "google-auth-library": "^10.5.0",
        "keytar": "^7.9.0",
        "open": "^8.4.0"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "testMatch": [
            "**/tests/**/*.test.ts"
        ],
        "collectCoverageFrom": [
            "src/**/*.ts"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 60,
                "functions": 60,
                "lines": 60,
                "statements": 60
            }
        }
    }
}